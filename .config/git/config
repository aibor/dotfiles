# vim: set ft=gitconfig:

[core]
  editor = nvim
  whitespace=-indent-with-non-tab,trailing-space,cr-at-eol
  pager = delta --light --pager less

[maintenance]
	# Optimize repos periodically.
    auto = true
    strategy = incremental

[init]
  defaultBranch = main

[merge]
  conflictStyle = zdiff3
  tool = nvimdiff

[mergetool]
  keepBackup = false
  writeToTemp = true

[mergetool "nvimdiff"]
  layout = "LOCAL,REMOTE / MERGED"
  trustExitCode = false

[rerere]
  # Remeber merge conflict resolutions.
  enabled = true
  autoUpdate = true

[rebase]
  # Update all intermediate branches on rebase as well.
  updateRefs = true

[push]
  # Automatically create non-existing remote branches
  autoSetupRemote = true

[fetch]
  prune = true
  pruneTags = true
  all = true

[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

  submodule = log

[diff "ansible-vault"]
  textconv = ansible-vault decrypt --output=-
  cachetextconv = false

[interactive]
  diffFilter = delta --color-only --light --pager less

[delta]
  navigate = true  # use n and N to move between diff sections

[help]
  autocorrect = prompt

[status]
  # Show branch name when using git status --short.
  branch = true

[commit]
  # Diff in commit message template
  verbose = true

[branch]
  # Most recent branches first.
  sort = -committerdate

[tag]
  # Most recent tags first.
  sort = -version:refname

[column]
  # use multiple columns when listing things. 
  ui = auto

[alias]
  bwc = blame -w -C -C -C
  br = branch
  co = checkout
  ci = commit
  ca = commit --amend
  fix = commit --amend --no-edit
  df = diff
  dfs = diff --stat
  dc = diff --cached
  dcs = diff --cached --stat
  dw = diff --word-diff=color
  dwc = diff --word-diff=color --cached
  fap = fetch --all --prune
  find = log --oneline --source --all --name-only -G
  lg = log -p
  lo = log --oneline -n 40
  mt = mergetool
  tree = log --graph --remotes --branches --tags -20 --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)' --abbrev-commit
  treo = tree --oneline -n 50
  pfl = push --force-with-lease --force-if-includes
  ri = rebase -i
  ria = rebase -i --autosquash
  hash = rev-parse HEAD
  ss = show --stat
  who = shortlog -s --
  st = status --short
  sw = switch

